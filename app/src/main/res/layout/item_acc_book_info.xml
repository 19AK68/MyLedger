<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:background="#fff0">


        <TextView
            android:id="@+id/tvDateAccInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="10dp"
            android:textColor="#ff0000"
            android:text="data" />

        <TextView
            android:id="@+id/tvAccInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/tvDateAccInfo"
            android:layout_toRightOf="@+id/tvDateAccInfo"
            android:textSize="10dp"
            android:textColor="#008000"
            android:text="Info" />

        <TextView
            android:id="@+id/tvSumAccInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/tvAccInfo"
            android:textSize="10dp"
            android:textColor="#800080	"
            android:paddingLeft="10dp"

            android:text="sum" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>